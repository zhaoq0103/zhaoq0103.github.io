<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Spring IoC基于XML配置，主要是通过bean标签进行Bean的管理的 -->
    <!-- property依靠反射和setter函数工作 -->
    <!--<bean id="userService" class="com.zhaoq.spring.service.UserServiceImpl" >-->
        <!--<property name="uid" value="18"></property>-->
        <!--<property name="name" value="zhaoqiang"></property>-->
    <!--</bean>-->

    <!-- 配置组件扫描器 -->
    <!-- 作用：主要是spring使用，用来扫描带有指定注解的类，将这些类加载成BeanDefinition -->
    <!-- 问题：元素 "context:component-scan" 的前缀 "context" 未绑定。 -->
    <context:component-scan base-package="com.zhaoq.spring.service" />

    <!-- location:表示要加载的properties文件的路径 -->
    <context:property-placeholder location="classpath:config.properties"/>
</beans>